<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf8">
    <title> Hi </title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      body {
        font-family: sans-serif;
        letter-spacing: 0.01em;
        line-height: 1.6;
        font-size: 10px;
        color: #777;
      }
      h2 {
        display: block;
        font-size: 1.5em;
        color: #888;
      }
      .content {
        margin-left: auto;
        margin-right: auto;
        max-width: 1200px;
      }
      .data pre {
        height: 500px;
        overflow: scroll;
        border: 1px solid #eaeaea;
        background-color: #fafafa;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }

      .buttons {
        margin-top: 20px;
        text-align: center;
      }

      .buttons a {
        height: 30px;
        width: 100px;
        text-decoration: none;
        border: 2px solid #55dd55;
        background-color: #ddffdd;
        display: inline-block;
      }

      .text-right {
        text-align: right;
      }
    </style>
  </head>
  <body>
    <div class="content">
      <h1>Adres: {{ ip }} (<span id="revdns">...</span>)</h1>
      <span id="stats">...</span>
      <div class="pure-g">
        <div class="pure-u-1-2 data">
          <pre id="whois">...</pre>
        </div>
        <div class="pure-u-1-2 data">
          <pre id="shodan">...</pre>
        </div>

        <div class="pure-u-1-3 buttons">
          <a href="/classify/-1/{{ ip }}">BOT</a>
        </div>
        <div class="pure-u-1-3 buttons">
          <a href="/classify/0/{{ ip }}">Niewiadomo</a>
        </div>
        <div class="pure-u-1-3 buttons">
          <a href="/classify/1/{{ ip }}">Nie bot</a>
        </div>
      </div>
      <p>Automatycznie banowane (robi autorefresh): <span id="autobans"></span></p>
    </div>
    <script>
      $(function() {
        var autobans = [
          "MNT-DEPO40",
          "QuickPacket",
          "Quantil",
          "Secured Servers",
          "Amazon Technologies",
          "Digital Ocean",
          "OVH Hosting",
          "QuadraNet"
        ];
        $("#autobans").text(JSON.stringify(autobans));
        ["shodan", "revdns", "whois", "stats"].forEach(function(s) {
          $.ajax({
              url: "/"+s+"/{{ ip }}",
              success: function(data) {
                if(s == "shodan" || s == "whois") {
                  if(autobans.some(function(b) {
                    return data.toLowerCase().indexOf(b.toLowerCase()) > -1;
                  })) {
                    location.href = "/classify/-1/{{ ip }}";
                  }
                }
                $("#"+s).text(data);
              },
              timeout: 5000
          });
        });
      });
    </script>
  </body>
</html>
